            <corners android:radius="3dip"/>
            <gradient android:angle="360" android:startColor="#000" android:endColor="#00398e" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <gradient android:angle="360" android:startColor="#366cbc" android:endColor="#00398e" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
